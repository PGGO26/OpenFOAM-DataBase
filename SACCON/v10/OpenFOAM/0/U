FoamFile
{
    version         2.0;
    format          ascii;
    class           volVectorField;
    object          U;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/freestreamConditions"

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform $U;

boundaryField
{
    inlet
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;

    }
    
    outlet
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;

    }
    
    frontAndBack
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;

    }
    
    lowerWall
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;

    }
    
    upperWall
    {
        type            characteristicFarfieldVelocity;
        #include        "include/freestreamConditions"
        value           $internalField;

    }

    SACCON
    {
        type            boundaryCorrectedFixedValue;
        value           uniform (0 0 0);
    }
}


