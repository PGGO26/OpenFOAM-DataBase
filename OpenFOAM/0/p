FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

#include  "ICnBC"
internalField   uniform $Pressure;

boundaryField
{
    inlet
    {
        type            freestreamPressure;
        freestreamValue $internalField;

    }
    exit
    {
        type            freestreamPressure;
        freestreamValue $internalField;
    }

    top
    {
        type            freestreamPressure;
        freestreamValue $internalField;
    }

    bottom
    {
        type            freestreamPressure;
        freestreamValue $internalField;
    }

    aerofoil
    {
        type            zeroGradient;
    }

    front
    {
        type            empty;
    }
 
    back
    {
        type            empty;
    }
}

// ************************************************************************* //