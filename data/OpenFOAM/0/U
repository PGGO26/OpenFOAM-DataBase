FoamFile
{
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (30 0 0);

boundaryField
{
    inlet
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    exit
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    top
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    bottom
    {
        type            freestreamVelocity;
        freestreamValue $internalField;
    }

    aerofoil
    {
        type            noSlip;
    }

    front
    {
        type            empty;
    }

    back
    {
        type            empty;
    }
}

// ************************************************************************* //
